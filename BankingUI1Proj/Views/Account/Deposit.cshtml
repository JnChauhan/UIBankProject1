@model BankingUI1Proj.Models.Account

@{
    ViewData["Title"] = "Deposit";
}

<h2>Deposit</h2>
<h3>@Model.AccName</h3>
<br />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposit">
            <div class="form-group">
                <label value="Deposit" class="control-label">Enter a Deposit amount</label>
                $<input asp-for="Balance" class="form-control" type="number" min="0" step="0.01" />
            </div>
            <input asp-for="AccountNum" class="form-control" type="hidden" value="@Model.AccountNum">
            <br />

            <div class="form-group">
                <input type="submit" value="Deposit" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Go Back</a>
</div>