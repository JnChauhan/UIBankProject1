@model BankingUI1Proj.Models.Customer


@{
    ViewData["Title"] = "Index";
}
@if (User.Identity.Name != null)
{
    @if (ViewBag.ExistCust)
    {
        <h3>
            Welcome @ViewBag.Fullname
        </h3>
        <div style="margin-top: 30px;">
            <strong>To View or Edit your Personal Information <a asp-action="Edit">Click here</a></strong>
        </div>
        <div style="float: left; width: 550px; border: 1px solid black; margin-top: 5.5em; background-color: #F9F6F5">
            <h3 style="padding: 50px 50px 15px 50px;">Manage OR View your Accounts! </h3>
            <p style="padding: 10px 50px 25px 50px;">
                <a class="btn btn-primary" style="color:white; width: 350px" asp-area="" asp-controller="Account" asp-action="Index"><strong>My Accounts</strong></a>
            </p>
        </div>
    }
    else
    {
        <h2 style="margin: 40px">
            Cannot Open Account Portal
        </h2>
        <div style="font-size: 22px">
            <p>More Information Required to Access Account Portal</p>
            <p>
                Please <a asp-area="" asp-controller="Customer" asp-action="Create" asp-route-userEmail="@User.Identity.Name">Click Here!</a> to Proceed
            </p>
        </div>
    }
}
else
{
    <h2>
        Access Denied!
    </h2>
    <h4>
        Please Login to your account and try again.
    </h4>
}


